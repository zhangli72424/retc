.app-register .txt {
  width: 100%;
  margin: 60rpx 0 30rpx;
  text-align: center;
  font-size: 14px;
  color: #2a2a2a;
}
.app-register .inp {
  width: 620rpx;
  height: 80rpx;
  background-color: #f6f6f6;
  width: 580rpx;
  padding: 0 40rpx;
  margin: 0 auto;
  text-align: center;
}
.app-register .inp input {
    width: 100%;
    font-size: 14px;
    border-radius: 10rpx;
    height: 80rpx;
}
.app-register .confirm {
  width: 360rpx;
  height: 80rpx;
  background-color: #1aafaf;
  border-radius: 10rpx;
  font-size: 14px;
  color: #ffffff;
  line-height: 80rpx;
  text-align: center;
  margin: 36rpx 196rpx 70rpx;
}
.app-register .split {
  width: 100%;
  height: 10rpx;
  background-color: #f6f6f6;
}
.app-register .dangerCode {
  color: #f00;
  width: 70%;
  font-size: 22rpx;
  text-align: center;
  line-height: 34rpx;
  margin: 30rpx auto;
}
.app-register .vcode {
  width: 750rpx;
  margin-top: 100rpx;
}
.app-register .vcode .title {
    width: 100%;
    text-align: center;
    font-size: 15px;
    margin-bottom: 20rpx;
    white-space: nowrap;
}
.app-register .vcode .img {
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
}
.app-register .vcode .img image {
      width: 200rpx;
      height: 200rpx;
}

